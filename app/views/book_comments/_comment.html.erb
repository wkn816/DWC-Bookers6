<div id="comment_<%= @comment.id %>">
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= comment.comment %>
    </td>
    <td>
      <% if comment.user_id == current_user.id %>
        <%= link_to "Destroy", book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <% end %>
    </td>
  </tr>
</div>